@model UserCreationDto

<section class="vh-100" style="background-color: #19A7CE;">
    <div class="container h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-lg-12 col-xl-11">
                <div class="card text-black" style="border-radius: 25px;">
                    <div class="card-body p-md-5">
                        <div class="row justify-content-center">
                            <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">

                                <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">Sign up</p>

                                <form class="mx-1 mx-md-4" asp-action="Signup" asp-controller="User" method="post">
                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <i class="fas fa-user fa-lg me-3 fa-fw"></i>
                                        <div class="form-outline flex-fill mb-0">
                                            <input type="text" id="FirstName" class="form-control" asp-for="FirstName" />
                                            <label class="form-label" for="FirstName"  asp-for="FirstName">FirstName</label>
                                        </div>
                                    </div>
                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <i class="fas fa-user fa-lg me-3 fa-fw"></i>
                                        <div class="form-outline flex-fill mb-0">
                                            <input type="text" id="LastName" class="form-control" asp-for="LastName"  />
                                            <label class="form-label" for="LastName" asp-for="LastName">LastName</label>
                                        </div>
                                    </div>

                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <i class="fas fa-envelope fa-lg me-3 fa-fw"></i>
                                        <div class="form-outline flex-fill mb-0">
                                            <input type="tel" id="Email" class="form-control" asp-for="Phone" />
                                            <label class="form-label" for="Email" asp-for="Phone" >Phone</label>
                                        </div>
                                    </div>

                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <i class="fas fa-lock fa-lg me-3 fa-fw"></i>
                                        <div class="form-outline flex-fill mb-0">
                                            <input type="password" name="Password" id="Password" class="form-control" onkeyup="onChange()" asp-for="Password" />
                                            <label class="form-label" name="Password" for="Password" asp-for="Password" onkeyup="onChange()">Password</label>
                                        </div>
                                    </div>

                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <i class="fas fa-lock fa-lg me-3 fa-fw"></i>
                                        <div class="form-outline flex-fill mb-0">
                                            <input type="password" name="ConfirmPassword" id="ConfirmPassword" class="form-control" onkeyup="onChange()" />
                                            <label class="form-label" name="ConfirmPassword" for="ConfirmPassword" onkeyup="onChange()">Confirm Password</label>
                                        </div>
                                    </div>

                                    <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                                        <button type="submit" class="btn btn-primary btn-lg">Sign up</button>
                                    </div>
                                </form>
                            </div>
                            <div class="col-md-10 col-lg-6 col-xl-7 d-flex align-items-center order-1 order-lg-2">

                                <img src="https://digitalhealth.folio3.com/blog/wp-content/uploads/2022/05/How-to-Build-an-Electronic-Health-Record-System-1-scaled.jpg"
                                     class="img-fluid" alt="Sample image">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<script>
    function onChange() {
        const password = document.querySelector('input[name=Password]');
        const confirm = document.querySelector('input[name=ConfirmPassword]');
        if (confirm.value === password.value) {
            confirm.setCustomValidity('');
        } else {
            confirm.setCustomValidity('Passwords do not match');
        }
    }
</script>